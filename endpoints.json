{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the chosen article by id",
    "queries": [
      "title",
      "topic",
      "author",
      "body",
      "created_at",
      "votes",
      "article_img_url"
    ],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": "11"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments by article_id",
    "queries": ["body", "article_id", "author", "votes", "created_at"],
    "exampleResponse": {
      "comments": {
        "comment_id": 18,
        "body": "This morning, I showered for nnine minutes",
        "article_id": 1,
        "author": "butter_bridge",
        "votes": 16,
        "created_at": "2020-07-21T00:20:00.000Z"
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment about an article by use of article_id",
    "queries": ["body", "article_id", "author"],
    "exampleResponse": {
      "comments": {
        "username": "butter_bridge",
        "body": "new added body"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "patches an existing article with new votes",
    "queries": ["article_id", "inc_votes"],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": " Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 101,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by its id",
    "queries": ["comment_id"],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "deletes a comment by its id",
    "queries": [],
    "exampleResponse": {
      "username": "butter_bridge",
      "name": "jonny",
      "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
    }
  },
  "GET /api/articles?sort_by=title&order=asc": {
    "description": "sorts the articles array",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "author": "icellusedkars",
      "title": "A",
      "article_id": 6,
      "topic": "mitch",
      "created_at": "2020-10-18T01:00:00.000Z",
      "votes": 0,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
      "comment_count": "1"
    }
  },
  "GET /api/articles?topic=cats": {
    "description": "sorts the articlex array",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "author": "rogersop",
      "title": "UNCOVERED: catspiracy to bring down democracy",
      "article_id": 5,
      "topic": "cats",
      "created_at": "2020-08-03T13:14:00.000Z",
      "votes": 0,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
      "comment_count": "2"
    }
  }
}
